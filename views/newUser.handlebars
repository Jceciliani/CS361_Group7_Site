<div id="input">
	<h3>Enter the information below to register your account</h3>
	<form action="/newDonorSubmit" method="POST">
		<table id="newUserTable">
			<tr>
				<td class="rightAlign">First Name:</td>
				<td class="leftAlign"><input type="text" name="firstName" required></td>
			</tr>
			<tr>
				<td class="rightAlign">Last Name:</td>
				<td class="leftAlign"><input type="text" name="lastName" required></td>
			</tr>
			<tr>
				<td class="rightAlign">User Name:</td>
				<td class="leftAlign"><input type="text" name="userName" required></td>
			</tr>
			<tr>
				<td class="rightAlign">Password:</td>
				<td class="leftAlign"><input type="password" name="password" required></td>
			<tr>
				<td class="rightAlign">Email Address:</td>
				<td class="leftAlign"><input type="text" name="email" required></td>
			</tr>
		</table>
		<input type="submit" value="Submit">
	</form>
</div>

